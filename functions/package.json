{
  "name": "functions",
  "scripts": {
    "lint": "eslint src --fix",
    "build": "tsc",
    "build:watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch-all --collect-coverage",
    "test:ci": "firebase emulators:exec --only database,firestore,storage \"npm run test --exit\"",
    "emulate": "npm run emulators:stop && firebase emulators:start",
    "emulators:stop": "lsof -t -i:4010 -i:4011 -i:4012 -i:4013 -i:4014 -i:4015 | xargs kill -9",
    "serve": "firebase emulators:start --only functions",
    "deploy": "firebase deploy --only functions:translate",
    "logs": "firebase functions:log",
    "playground": "node lib/playground.js"
  },
  "engines": {
    "node": "16"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@sign-mt/browsermt": "0.1.0",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "firebase-admin": "^11.0.1",
    "firebase-functions": "^3.22.0",
    "http-errors": "^2.0.0"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^2.0.4",
    "@types/http-errors": "^1.8.2",
    "@types/jest": "^28.1.7",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "eslint": "^8.22.0",
    "firebase-functions-test": "^2.3.0",
    "firebase-tools": "^11.7.0",
    "jest": "^28.1.3",
    "mock-express-request": "^0.2.2",
    "mock-express-response": "^0.3.0",
    "ts-jest": "^28.0.8",
    "typescript": "^4.7.4"
  },
  "private": true
}
